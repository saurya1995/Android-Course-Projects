<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unisoft.customadaptersdemo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LayoutInflaterActivity"
            android:label="@string/title_activity_layout_inflater" >
        </activity>
        <activity
            android:name=".ListActivityOne"
            android:label="@string/title_activity_list_activity_one" >
        </activity>
        <activity
            android:name=".SpinnerActivityOne"
            android:label="@string/title_activity_spinner_activity_one" >
        </activity>
        <activity
            android:name=".GridActivityOne"
            android:label="@string/title_activity_grid_activity_one" >
        </activity>
    </application>

</manifest>
